	}

	.abt-me-bruh{
		width:45%;
	}
	.abt-me{
		display: flex;
		justify-content: space-between;
		align-items: center;
	}
	.abt-me-p{
		font-weight: 350;
		letter-spacing: 0px;
		font-size: 0.8rem;
  		line-height: 1.2rem;
		margin: 0;
	}

	.bg-squares-svg{
		animation: pulse 5s alternate ease-out infinite;
		filter: drop-shadow(0px 0px 10px var(--color-highlight1));
	}
	
	@keyframes pulse {
		from {
			filter: drop-shadow(0px 0px 5px var(--color-highlight1));
			stroke: var(--color-highlight1);
		}

		to {
			filter: drop-shadow(0px 0px 15px var(--color-highlight1));
		}
	}

	.squares-svg{
		float: right;
	}

	.squares-svg-container {
		width: 45%;
	}

	.button{
  		cursor: pointer;
		
		width: 12rem;
		height: 3rem;
		margin: 1rem 0;

  		display: inline-block;
		border-radius: 2rem;
		border-color: var(--color-highlight1);

  		text-align: center;
		font-weight: 700;
		font-size: var(--font-size-base);

		background-color: transparent;

  		transition: all 0.5s;
	}

	.button span {
		cursor: pointer;
		display: inline-block;
		position: relative;
		transition: 0.5s;
		
		background-image: var(--hl-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.button span:after {
		content: '\00bb';
		position: absolute;
		opacity: 0;
		top: 0;
		right: -20px;
		transition: 0.5s;

		background-image: var(--hl-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
	}

	.button:hover span {
		padding-right: 25px;
	}

	.button:hover span:after {
		opacity: 1;
		right: 0;
	}

	.blink {
		animation: blink 1s step-start 0s infinite;
		margin-top: 1rem;
		font-weight: 600;
	}

	@keyframes blink {
		50% {
			opacity: 0.0;
		}
	}
</style>
