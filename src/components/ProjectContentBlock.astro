---
const {src,alt, size=["auto", "auto"]} = Astro.props;
---


<div id="pcb">
    <img class="pcb-img" src={src} alt={alt} style={`width: ${size[0]}; height:${size[1]}`}>
    <div class="pcb-content">
        <slot/>
    </div>
</div>

<style>
    #pcb{
        display: block;
        padding: 1rem 0;
    }
    .pcb-img{
        display: block;
        margin: 0 2rem;
        margin-bottom: 2rem;
        
        float: right;

        border-style: solid;
        border-width: 3px;
        border-color: var(--color-highlight1);
    }
    .pcb-content{
        letter-spacing: -1px;
        margin: 1rem 0;
        width: 100% - 20vw;
    }
</style>