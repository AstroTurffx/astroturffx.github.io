---
import Base from "../../layouts/Base.astro";
import projects from '../../data/projects.json'
---

<Base title="Projects">
    <div class="container">
        <h1 class="hl-title">Project List</h1>
        <hr>
        <div class="project-list">
            <div class="sort-by">
                <span>Sort by tag:</span>
                <select id="sort-by-select">
                    <option value="">All</option>
                    <option value="tag1">Tag 1</option>
                    <option value="tag2">Tag 2</option>
                    <option value="tag3">Tag 3</option>
                </select>
            </div>
    
            <div class="project-grid" id="project-grid">
                {projects.map((project: any) =>
                    <div class="project-item">
                        <h2>{project.title}</h2>
                        <p>{project.description}</p>
                        <div class="tags">
                            {project.tags.map((tag: string) => 
                                <span>{tag}</span>
                            )}
                        </div>
                    </div>
                )}
            </div>
        </div>
    </div>
</Base>

<style>
    h1{
        margin: 1rem 0;
    }

    hr {
        border: 0;
        border-top: 1px solid #6b6b6b5d;
    }

    .container {
        padding: 0 2rem;
    }
    .project-list {
        margin: 0 auto;
        max-width: 1000px;
    }

    /* Set up the project grid */
    .project-grid {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 2rem;
        margin: 1rem auto;
        max-width: 1200px;
    }

    /* Style the individual project items */
    .project-item {
        position: relative;
        overflow: hidden;
        background-color: #575757;
        border-radius: 10px;
        box-shadow: 0px 8px 10px rgba(0, 0, 0, 0.15);
        transition: transform 0.2s ease-out, box-shadow 0.2s ease-out;
    }

    /* Add a hover effect to the project items */
    .project-item:hover {
        transform: translateY(-5px);
        box-shadow: 0px 12px 20px rgba(0, 0, 0, 0.2);
    }

    /* Style the project item image */
    .project-item img {
        display: block;
        width: 100%;
        height: auto;
        object-fit: cover;
        transition: transform 0.2s ease-out;
    }

    /* Add a hover effect to the project item image */
    .project-item:hover img {
        transform: scale(1.1);
    }

    /* Style the project item content */
    .project-item .content {
        padding: 2rem;
    }

    /* Style the project item title */
    .project-item h2 {
        margin-top: 0;
        font-size: 1.5rem;
        font-weight: 600;
        line-height: 1.2;
    }

    /* Style the tags */
    .tags {
        display: flex;
        flex-wrap: wrap;
        gap: 0.5rem;
        margin-top: 1rem;
    }

    /* Add styling to individual tags */
    .tags span {
        padding: 0.25rem 0.5rem;
        background-color: #eee;
        border-radius: 0.25rem;
        font-size: 0.8rem;
        text-transform: uppercase;
    }
</style>