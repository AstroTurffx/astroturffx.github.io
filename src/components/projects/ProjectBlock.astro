---
const { title, tags } = Astro.props;
---

<div class="block">
    <h3 class="title">{title}</h3>
    <div class="hr"></div>
    <div class="tags">
        {tags.map((x: string) => <span class="tag">{x}</span>)}
    </div>
    <div class="content">
        <slot/>
    </div>
</div>

<style>
    .content{
        margin: 0.5rem;
        font-size: 0.8rem;
    }

    .block {
        width: 18%;
        height: 10rem;

        border-style: solid;
        border-color: #2e2e2e71;
        border-radius: 1rem;
        border-width: 1px;
    }
    .title{
        margin-top: 1rem;
        margin: 0.5rem;
        text-align: center;
        color: var(--color-highlight1);
    }

    .hr{
        border-color: #2e2e2e71;
        border-width: 0.5px;
        border-top-style: solid;

        margin-bottom: 0.2rem;
    }

    .tags{
        width: 100%;
        
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }
    .tag{
        border-radius: 0.6rem;
        border-style: solid;
        border-width: 2px;

        border-color:  #3600fa;
        background-color: #301494;

        font-weight: 300;
        font-size: 0.7rem;
        
        padding: 0.1rem 0.5rem;
        margin: 0.25rem;
    }
</style>